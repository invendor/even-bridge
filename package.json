{
  "name": "even-bridge",
  "version": "1.3.0",
  "description": "Even G2 glasses speech-to-messenger bridge",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "sim": "npx evenhub-simulator http://localhost:3000",
    "dev:sim": "npx concurrently \"npm run dev\" \"sleep 3 && npm run sim\"",
    "build": "tsc && cp -r src/public dist/",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@slack/web-api": "^7.14.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "html-to-text": "^9.0.5",
    "imapflow": "^1.2.10",
    "nodemailer": "^8.0.1",
    "openai": "^4.77.0",
    "telegram": "^2.26.22",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/html-to-text": "^9.0.4",
    "@types/nodemailer": "^7.0.11",
    "@types/ws": "^8.5.13",
    "concurrently": "^9.2.1",
    "sharp": "^0.34.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
